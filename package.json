{
  "name": "move-usings-to-global",
  "displayName": "Move Usings to Global",
  "description": "VSCode extension to refactor C# using statements into GlobalUsings.cs, supporting .cs, .csproj, and .sln context actions",
  "version": "0.0.1",
  "publisher": "chaluvadis",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.moveUsingsToGlobal"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.moveUsingsToGlobal",
        "title": "Move Usings to GlobalUsings.cs",
        "category": "C# Refactor"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.moveUsingsToGlobal",
          "when": "resourceExtname == .cs || resourceExtname == .csproj || resourceExtname == .sln",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "typescript": "^4.8.4",
    "vscode-test": "^1.6.4"
  }
}